@model IEnumerable<W_SOFIA.Models.Inventario>

@{
    ViewData["Title"] = "List";
}

    <div class="col-xl-3 col-lg-3 col-md-4 col-sm-4" style="padding-top:1em">
        <div class="card">
            <div class="card-body">
                <div class="stat-widget-one">
                    <div class="stat-icon dib"><i class="ti-layout-grid2 text-warning border-warning"></i></div>
                    <div class="stat-content dib">
                        <div class="stat-text">Activos</div>
                        <div class="stat-digit count">770</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-3 col-md-5 col-sm-4"  style="padding-top:1em">
        <div class="card">
            <div class="card-body">
                <div class="stat-widget-one">
                    <div class="stat-icon dib"><i class="ti-archive text-primary border-primary"></i></div>
                    <div class="stat-content dib">
                        <div class="stat-text">Stock Minimos</div>
                        <div class="stat-digit count">@Model.Count()</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 offset-lg-3  col-md-3 col-sm-4 align-bottom text-lg-right text-md-right text-sm-center">
        <div class="card-body">
            <button type="button" class="btn btn-secondary btn-sm btn-block"><i class="fa fa-list-alt"></i>&nbsp; Importar</button>
            <button type="button" class="btn btn-secondary  btn-sm btn-block" onclick="Location.href='/Clientes/View';"><i class="fa fa-file"></i>&nbsp; Exportar</button>
            <button type="button" class="btn btn-secondary  btn-sm btn-block " onclick="Nuevo()"><i class="fa fa-plus"></i>&nbsp; Nuevo</button>
        </div>
    </div>
<div class="col-md-12 animated fadeInUp">
    <div class="card small">
        <div class="card-header">
            <strong class="card-title">Lista de Productos</strong>
        </div>
        <div class="card-body">
                    <table id="bootstrap-data-table" class="table table-striped table-bordered table-sm table-responsive-sm">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.UPC)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SKU)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Descripcion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Impuesto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PrecioCompra)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CantMinima)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CantMaxima)
                                </th>
                                <th>
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UPC)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SKU)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PrecioCompra)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CantMinima)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CantMaxima)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaAlta)
                                    </td>
                                    <td>
                                        <a href="/Inventario/Edit/@item.SKU" class="btn btn-light btn-sm"><i class="fa fa-pencil"></i></a>
                                        <a href="/Inventario/Delete/@item.SKU" class="btn btn-danger btn-sm"><i class="fa fa-times"></i></a>
                                        @*@Html.ActionLink("Edit", "Edit", new { id = item.SKU })
                                        @Html.ActionLink("Details", "Details", new { id = item.SKU })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.SKU })*@
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
 
<script src="~/assets/js/lib/data-table/datatables.min.js"></script>
<script src="~/assets/js/lib/data-table/dataTables.bootstrap.min.js"></script>
<script src="~/assets/js/lib/data-table/dataTables.buttons.min.js"></script>
<script src="~/assets/js/lib/data-table/buttons.bootstrap.min.js"></script>
<script src="~/assets/js/lib/data-table/jszip.min.js"></script>
<script src="~/assets/js/lib/data-table/pdfmake.min.js"></script>
<script src="~/assets/js/lib/data-table/vfs_fonts.js"></script>
<script src="~/assets/js/lib/data-table/buttons.html5.min.js"></script>
<script src="~/assets/js/lib/data-table/buttons.print.min.js"></script>
<script src="~/assets/js/lib/data-table/buttons.colVis.min.js"></script>
<script src="~/assets/js/lib/data-table/datatables-init.js"></script>


<script type="text/javascript">

    function Nuevo() {
        window.open("/Inventario/Create"); //abrir en misma ventana
       // window.location.href = '/Inventario/Create'; //abrir en nueva ventana
    }

    $(document).ready(function () {
        $('#bootstrap-data-table-export').DataTable();
    });
</script>